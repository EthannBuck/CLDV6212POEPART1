
@{
    ViewData["Title"] = "Privacy";
}

<style>
        body {
            background-image: url('https://t4.ftcdn.net/jpg/03/05/43/43/360_F_305434309_0mgfzZM1rvStOymLOrXW4d5DVMkE2rrs.jpg'); 
            background-size: cover; 
            background-position: center; 
            background-attachment: fixed; 
            background-color: #ffffff; 
            color: #000000; 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .jumbotron {
            background-color: rgba(255, 255, 255, 0.2); 
            color: #000000; 
            padding: 3rem 2rem;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
            border-radius: 15px;
            backdrop-filter: blur(10px); 
            text-align: center; 
            display: flex; 
            flex-direction: column; 
            justify-content: center; 
            min-height: 200px; 
        }

        .card {
            background-color: rgba(255, 255, 255, 0.9); 
            border-radius: 15px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.15);
        }

        .btn-primary {
            width: 100%; 
            font-size: 1.1rem;
            padding: 0.75rem;
            border-radius: 10px;
        }

        .square-card {
            height: 100%; 
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .container {
            max-width: 1200px;
        }

        .card-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .card-text {
            font-size: 1.1rem;
            margin-bottom: 2rem;
            color: #666;
        }

        .mt-3 {
            margin-top: 1rem;
        }
    </style>


    <div class="container mt-5">
        <div class="jumbotron rounded shadow-sm">
            <h1 class="display-4"><b>About Us</b></h1>
            <p class="lead">Discover more about ABC Retail and our mission to provide exceptional service and products.</p>
        </div>

        <div class="row mt-5">
            <!-- Company Overview -->
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow-sm square-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">Company Overview</h5>
                        <p class="card-text">ABC Retail has been a leader in providing exceptional retail services and products. Our mission is to offer high-quality goods and unparalleled customer service.</p>
                    </div>
                </div>
            </div>

            <!-- Our Mission -->
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow-sm square-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-success">Our Mission</h5>
                        <p class="card-text">We are dedicated to making every shopping experience seamless and enjoyable. Our team works tirelessly to ensure that our customers receive the best service possible.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <!-- Our Values -->
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow-sm square-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-info">Our Values</h5>
                        <p class="card-text">Integrity, customer focus, and innovation are at the heart of everything we do. We strive to uphold these values in all our interactions and business practices.</p>
                    </div>
                </div>
            </div>

            <!-- Contact Us -->
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow-sm square-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-warning">Contact Us</h5>
                        <p class="card-text">Have any questions or need assistance? Reach out to our support team and we'll be happy to help you.</p>
                        <a href="/Home/Contact" class="btn btn-primary mt-3">Contact Us</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

